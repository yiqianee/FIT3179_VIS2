{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 680,
  "height": 470,
  "title": {
    "text": "Geographical Distribution of Major Airports in Australia",
    "fontSize": 24,
    "font": "Arial",
    "anchor": "middle"
  },
  "projection": {
    "type": "mercator",
    "scale": 600,
    "center": [140, -29],
    "translate": [400, 250]
  },
  "layer": [
    {
      "data": {
        "graticule": {
          "step": [10, 10]
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "gray",
        "strokeWidth": 0.25
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yiqianee/FIT3179_hw_week10/refs/heads/main/js/aus_map.json",
        "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
      },
      "mark": {"type": "geoshape", "fill": "lightblue", "stroke": "gray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/yiqianee/FIT3179_VIS2/refs/heads/main/data/australian_airports.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "calculate": "datum.type === 'large_airport' ? 'Large Airport' : datum.type === 'medium_airport' ? 'Medium Airport' : datum.type",
          "as": "airport_label"
        },
        {
          "calculate": "datum.score >= 1000000 ? 'Category 1' : datum.score >= 500000 ? 'Category 2' : datum.score >= 10000 ? 'Category 3' : 'Category 4'",
          "as": "score_category"
        }
      ],
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "longitude_deg", "type": "quantitative"},
        "latitude": {"field": "latitude_deg", "type": "quantitative"},
        "size": {
          "field": "score_category",
          "type": "nominal",
          "title": "Score Category",
          "scale": {
            "domain": ["Category 1", "Category 2", "Category 3", "Category 4"],
            "range": [800, 200, 100, 50]
          },
          "legend": {
            "title": "Score Category",
            "orient": "right",
            "offset": 20,
            "labelFontSize": 12,
            "titleFontSize": 13
          }
        },
        "color": {
          "field": "airport_label",
          "type": "nominal",
          "title": "Airport Type",
          "scale": {
            "domain": ["Large Airport", "Medium Airport"],
            "range": ["purple", "darkblue"]
          },
          "legend": {
            "title": "Airport Type",
            "labelFontSize": 12,
            "titleFontSize": 13
          }
        },
        "tooltip": [
          {"field": "name", "title": "Airport Name"},
          {"field": "region_name", "title": "Region Name"},
          {"field": "airport_label", "title": "Airport Type"},
          {"field": "score", "title": "Airport Score", "format": ",d"},
          {"field": "score_category", "title": "Airport Score Category"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {"name": "Brisbane International Airport", "longitude_deg": 152.1094, "latitude_deg": -25.8, "yTransform": 0.5},  
          {"name": "Melbourne International Airport", "longitude_deg": 144.8467, "latitude_deg": -39.8, "yTransform": 0.7},  
          {"name": "Sydney Kingsford Smith International Airport", "longitude_deg": 150.5, "latitude_deg": -32.5, "yTransform": 0.8},
          {"name": "Perth International Airport", "longitude_deg": 115.9589, "latitude_deg": -30.9403, "yTransform": 0.5},
          {"name": "Adelaide International Airport", "longitude_deg": 138.5306, "latitude_deg": -36.945, "yTransform": 0.6},
          {"name": "Darwin International Airport / RAAF Darwin", "longitude_deg": 130.8727, "latitude_deg": -10.4147, "yTransform": 0.3}
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "black"
      },
      "transform": [
        {
          "calculate": "datum.latitude_deg + datum.yTransform",
          "as": "adjusted_latitude"
        }
      ],
      "encoding": {
        "longitude": {"field": "longitude_deg", "type": "quantitative"},
        "latitude": {"field": "adjusted_latitude", "type": "quantitative"},
        "text": {"field": "name", "type": "nominal"}
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "lightgray",
      "padding": 0
    },
    "axisX": {
      "domain": false,
      "grid": false,
      "ticks": false,
      "labels": false,
      "title": null
    },
    "axisY": {
      "domain": false,
      "grid": false,
      "ticks": false,
      "labels": false,
      "title": null
    },
    "background": "#f9f6f2"
  }
}
